# ==============================================================================
# Announce-Go API 환경 설정
# ==============================================================================
# 이 파일을 .env로 복사하여 사용하세요.
# cp .env.example .env

# === App ===
APP_NAME=Announce-Go API
APP_ENV=local
DEBUG=true

# === Database ===
# DB_TYPE: sqlite 또는 postgresql
DB_TYPE=sqlite

# SQLite 설정 (DB_TYPE=sqlite)
SQLITE_PATH=./local.db

# PostgreSQL 설정 (DB_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=announce_go

# === Session Store ===
# SESSION_STORE_TYPE: memory 또는 redis
SESSION_STORE_TYPE=memory

# Redis 설정 (SESSION_STORE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# === Session ===
SESSION_EXPIRE_SECONDS=86400
REMEMBER_ME_EXPIRE_SECONDS=2592000
SESSION_COOKIE_NAME=session_id

# === Admin Seed ===
ADMIN_LOGIN_ID=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=관리자
